import datetime
import subprocess
import os
import sys
import pandas as pd
import time



def resource_path(relative_path):
    """ Get absolute path to resource, works for dev and for PyInstaller """
    base_path = getattr(sys, '_MEIPASS', os.path.dirname(os.path.abspath(__file__)))
    return os.path.join(base_path, relative_path)

def My_Documents(location):
	import ctypes.wintypes
		#####-----This section discovers My Documents default path --------
		#### loop the "location" variable to find many paths, including AppData and ProgramFiles
	CSIDL_PERSONAL = location       # My Documents
	SHGFP_TYPE_CURRENT = 0   # Get current, not default value
	buf= ctypes.create_unicode_buffer(ctypes.wintypes.MAX_PATH)
	ctypes.windll.shell32.SHGetFolderPathW(None, CSIDL_PERSONAL, None, SHGFP_TYPE_CURRENT, buf)
	#####-------- please use buf.value to store the data in a variable ------- #####
	#add the text filename at the end of the path
	temp_docs = buf.value
	return temp_docs

x = datetime.datetime(2022, 9, 28)
mis_docs = My_Documents(5)


def decode(hst_name):
	ruta = str(mis_docs)+ str(r'\\polea') + "\\" + hst_name
	subprocess.call([resource_path(r"images/HST2TXT.exe"), ruta])
	time.sleep(2)

for  i in range(0,1):
	#HST name structure:
	d1 =x.strftime("%d")
	m1 = x.strftime("%m")
	a1 = x.strftime("%y")
	txt_name = f"05{a1}{m1}{d1}.hst"
	decode(txt_name)
	x = x + datetime.timedelta(days=1)

